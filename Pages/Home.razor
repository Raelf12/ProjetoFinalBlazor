@page "/"

@inject NavigationManager Navigation

<div class="login-wrapper">
    <div class="login-box">
        <h2>Bem-vindo</h2>

        <input type="text" placeholder="Usuário" class="input-field" />
        <input type="password" placeholder="Senha" class="input-field" />

        <button class="btn-primary" @onclick="IrParaInicio">Entrar</button>

        <div class="signup-link">
            <span>Não tem uma conta?</span>
            <a @onclick="IrParaCadastro">Criar conta</a>
        </div>
    </div>
</div>

@code {
    private void IrParaInicio()
    {
        Navigation.NavigateTo("/inicio");
    }

    private void IrParaCadastro()
    {
        Navigation.NavigateTo("/cadastro");
    }
}

